{
  "functions": {
    "api/mcp.ts": {
      "maxDuration": 60,
      "memory": 1024
    }
  },
  "rewrites": [
    {
      "source": "/",
      "destination": "/api/mcp"
    },
    {
      "source": "/mcp",
      "destination": "/api/mcp"
    },
    {
      "source": "/.well-known/mcp-config",
      "destination": "/api/well-known-mcp-config"
    }
  ],
  "buildCommand": "npm run build:vercel",
  "outputDirectory": "dist"
}

